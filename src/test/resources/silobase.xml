<silobase> 
	<databases>
		<database>
			<name>local</name>
			<driver>com.mysql.jdbc.Driver</driver>
			<url>jdbc:mysql://localhost:3306/dash</url>
			<username>dash</username>
			<password>dash</password>
		</database>
		<database>
			<name>staging</name>
			<driver>com.mysql.jdbc.Driver</driver>
			<url>jdbc:mysql://localhost:3306/dash</url>
			<username>dash</username>
			<password>dash</password>
		</database>
	</databases>
	<queries>
		<query>
			<name>Users by Customer</name>
			<database>local</database>
			<sql>
				select 	user.username, 
						user.first_name, 
						user.last_name,
						user.title 
				from 	user, 
						customer 
				where 	user.customer_id = customer.id 
				and 	customer.name    = :customer_name
			</sql>
		</query>
		<query>
			<database>staging</database>
			<name>All Customers</name>
			<sql>select * from customer</sql>
		</query>
	</queries>
</silobase>
